 nsVideoFrame::nsVideoFrame(nsStyleContext* aContext) :
   nsContainerFrame(aContext)
 {
+  AddStateBits(NS_FRAME_REFLOW_ROOT);
 }
 
 nsVideoFrame::~nsVideoFrame()
 {
 }
 
