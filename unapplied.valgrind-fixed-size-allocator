+        MempoolCreated();
+#endif
+    }
 
     ~nsFixedSizeAllocator() {
+#ifdef MOZ_VALGRIND
+        MempoolDestroyed();
+#endif
         if (mBuckets)
             PL_FinishArenaPool(&mPool);
     }
 
