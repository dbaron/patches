+// FIXME: Need to clamp nscoords resulting from arithmetic ops.
+struct ComputeCalcCalcOps : public mozilla::css::BasicCoordCalcOps,
+                            public mozilla::css::NumbersAlreadyNormalizedOps
+{
+  struct ComputeData {
+    nsStyleContext* mStyleContext;
+    nsPresContext* mPresContext;
+    nscoord mPercentageBasis;
+    PRBool& mCanStoreInRuleTree;
+
+    ComputeData(nsStyleContext* aStyleContext, nsPresContext* aPresContext,
+                nscoord aPercentageBasis, PRBool& aCanStoreInRuleTree)
+      : mStyleContext(aStyleContext),
+        mPresContext(aPresContext),
+        mPercentageBasis(aPercentageBasis),
+        mCanStoreInRuleTree(aCanStoreInRuleTree)
+    {
+    }
+  };
+
+  static result_type ComputeLeafValue(const nsCSSValue& aValue,
+                                      const ComputeData& aClosure)
+  {
+    nscoord result;
+    if (aValue.GetUnit() == eCSSUnit_Percent) {
+      result = NSToCoordFloorClamped(aValue.GetPercentValue() *
+                                     aClosure.mPercentageBasis);
+    } else {
+      result = CalcLength(aValue, aClosure.mStyleContext,
+                          aClosure.mPresContext, aClosure.mCanStoreInRuleTree);
+    }
+    return result;
+  }
+};
+
+// This is our public API for handling calc() expressions that involve
+// percentages.
+/* static */ nscoord
+nsRuleNode::ComputeCalc(const nsCSSValue& aValue,
+                        nsStyleContext* aStyleContext,
+                        nsPresContext* aPresContext,
+                        nscoord aPercentageBasis,
+                        PRBool& aCanStoreInRuleTree)
+{
+  ComputeCalcCalcOps::ComputeData data(aStyleContext, aPresContext,
+                                       aPercentageBasis, aCanStoreInRuleTree);
+  return mozilla::css::ComputeCalc<ComputeCalcCalcOps>(aValue, data);
+}
