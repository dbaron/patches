From: L. David Baron <dbaron@dbaron.org>

Hack configure to not use the -v7a variants of STL libraries.  DO NOT CHECK IN.

diff --git a/configure.in b/configure.in
--- a/configure.in
+++ b/configure.in
@@ -369,17 +369,17 @@ case "$target" in
     CPP="$android_toolchain"/bin/"$android_tool_prefix"-cpp
     LD="$android_toolchain"/bin/"$android_tool_prefix"-ld
     AR="$android_toolchain"/bin/"$android_tool_prefix"-ar
     RANLIB="$android_toolchain"/bin/"$android_tool_prefix"-ranlib
     STRIP="$android_toolchain"/bin/"$android_tool_prefix"-strip
 
     case "${target_cpu}" in
     arm*)
-      ANDROID_CPU_ARCH=armeabi-v7a
+      ANDROID_CPU_ARCH=armeabi
       ;;
     i?86)
       ANDROID_CPU_ARCH=x86
       ;;
     esac
 
     if test -n "$MOZ_ANDROID_LIBSTDCXX" ; then
        if test ! -e "$android_ndk/sources/cxx-stl/gnu-libstdc++/libs/$ANDROID_CPU_ARCH/libstdc++.a" ; then
