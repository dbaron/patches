+  <stack>
+    <vbox align="left">
+      <menulist>
+        <menupopup>
+          <menuitem value="1" label="long item" />
+          <menuitem value="2" label="short" />
+        </menupopup>
+      </menulist>
+    </vbox>
+    <hbox>
+      <label value="long item" style="font: Menu; color: transparent" />
+      <!-- cover up the right edge of the above -->
+      <box flex="1" style="background: white" />
+    </hbox>
+  </stack>
+</window>
