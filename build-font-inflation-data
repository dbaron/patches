   static nsIFrame* FlowRootFor(nsIFrame *aFrame)
   {
     while (!aFrame->GetStateBits() & NS_FRAME_FONT_INFLATION_FLOW_ROOT) {
       aFrame = aFrame->GetParent();
     }
     return aFrame;
   }
 
