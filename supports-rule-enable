From: L. David Baron <dbaron@dbaron.org>

Turn on @supports in release builds.

diff --git a/modules/libpref/src/init/all.js b/modules/libpref/src/init/all.js
--- a/modules/libpref/src/init/all.js
+++ b/modules/libpref/src/init/all.js
@@ -1688,21 +1688,17 @@ pref("layout.css.devPixelsPerPx", "-1.0"
 // Is support for CSS Masking features enabled?
 #ifdef RELEASE_BUILD
 pref("layout.css.masking.enabled", false);
 #else
 pref("layout.css.masking.enabled", true);
 #endif
 
 // Is support for the the @supports rule enabled?
-#ifdef RELEASE_BUILD
-pref("layout.css.supports-rule.enabled", false);
-#else
 pref("layout.css.supports-rule.enabled", true);
-#endif
 
 // Is support for CSS Flexbox enabled?
 #ifdef RELEASE_BUILD
 pref("layout.css.flexbox.enabled", false);
 #else
 pref("layout.css.flexbox.enabled", true);
 #endif
 
