+    case eStyleUnit_Calc: {
+      nsAutoPtr<nsCSSValue> val(new nsCSSValue);
+      if (!SetCalcValue(aCoord.GetCalcValue(), *val))
+        return PR_FALSE;
+      aValue.SetAndAdoptCSSValueValue(val.forget(),
+                                      nsStyleAnimation::eUnit_Calc);
+      break;
+    }
     default:
       return PR_FALSE;
   }
   return PR_TRUE;
 }
 
