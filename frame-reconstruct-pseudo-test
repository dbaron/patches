+<!DOCTYPE HTML>
+<html>
+<!--
+https://bugzilla.mozilla.org/show_bug.cgi?id=1110277
+-->
+<head>
+  <meta charset="utf-8">
+  <title>Test for Bug 1110277</title>
+  <script type="application/javascript" src="/tests/SimpleTest/SimpleTest.js"></script>
+  <link rel="stylesheet" type="text/css" href="/tests/SimpleTest/test.css"/>
+  <style>
+  #firstlinetest::first-line {
+    color: purple;
+  }
+  #firstlinetestspan::before {
+    content: "[*]";
+  }
+  #firstlinetestspan[attributestate] {
+    color: yellow;
+  }
+  #firstlinetestspan[attributestate] {
+    color: blue;
+  }
+  </style>
+  <script type="application/javascript">
+
+  /** Test for Bug 1110277 **/
+
+  SimpleTest.waitForExplicitFinish();
+
+  function run() {
+    firstlinetest();
+    SimpleTest.finish();
+  }
+
+  function firstlinetest() {
+    var utils = SpecialPowers.getDOMWindowUtils(window);
+    var span = document.getElementById("firstlinetestspan");
+    var cs = getComputedStyle(span, "");
+
+    var startcolor = cs.color;
+    var startcount = utils.framesConstructed;
+    is(startcolor, "rgb(255, 255, 0)", "first line test: initial color");
+
+    span.setAttribute("attributestate", "true");
+
+    var endcolor = cs.color;
+    var endcount = utils.framesConstructed;
+    is(endcolor, "rgb(0, 0, 255)", "first line test: final color");
+    todo_is(endcount, startcount,
+       "first line test should not to frame construction")
+  }
+
+  </script>
+</head>
+<body onload="run()">
+<a target="_blank" href="https://bugzilla.mozilla.org/show_bug.cgi?id=1110277">Mozilla Bug 1110277</a>
+<div id="firstlinetest">
+  <span id="firstlinetestspan">This is<br>a test.</span>
+</div>
+<pre id="test">
+</pre>
+</body>
+</html>
