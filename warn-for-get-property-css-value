+/* static */ void
+nsStyleUtil::ReportUseOfDeprecatedMethod(nsIURI* aURI, const char* aWarning)
+{
+  nsContentUtils::ReportToConsole(nsContentUtils::eCSS_PROPERTIES,
+                                  aWarning, nsnull, 0, aURI,
+                                  EmptyString(), 0, 0,
+                                  nsIScriptError::warningFlag,
+                                  "CSS Object Model");
+}
