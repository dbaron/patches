 static void
 nsWidgetGtk2ModuleDtor()
 {
+  // XXX A bunch of these things need to happen before GFX shutdown, so
+  // they should happen earlier than the module destructor!
   nsFilePicker::Shutdown();
   nsSound::Shutdown();
   nsWindow::ReleaseGlobals();
   nsAppShellShutdown();
 }
 
