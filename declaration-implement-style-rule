+
+/* virtual */ void
+Declaration::MapRuleInfoInto(nsRuleData *aRuleData)
+{
+  MOZ_ASSERT(mData, "called while expanded");
+  mData->MapRuleInfoInto(aRuleData);
+  if (mVariables) {
+    mVariables->MapRuleInfoInto(aRuleData);
+  }
+}
