 // protected method
+nsIContent*
+HTMLTableCellElement::GetRowGroup() const
+{
+  nsIContent *row = GetRow();
+  if (!row)
+    return nullptr;
+  nsIContent *rowGroup = row->GetParent();
+  if (!rowGroup ||
+      !rowGroup->IsAnyOfHTMLElements(nsGkAtoms::tbody, nsGkAtoms::thead,
+                                     nsGkAtoms::tfoot)) {
+    rowGroup = nullptr;
+  }
+  return rowGroup;
+}
