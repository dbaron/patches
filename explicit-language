 nsStyleFont::nsStyleFont(nsPresContext* aPresContext)
   // passing nsnull to GetDefaultFont make it use the doc language
   : mFont(*(aPresContext->GetDefaultFont(kPresContext_DefaultVariableFont_ID, nsnull))),
