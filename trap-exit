+extern "C" {
+
+/* override exit(3) */
+void exit(int status)
+{
+  ah_crap_handler(SIGABRT);
+  void *next = dlsym(RTLD_NEXT, "exit");
+  ((void (*)(int))next)(status);
+}
+
