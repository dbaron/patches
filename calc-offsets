   case eCSSProperty_box_direction:
     return ParseVariant(aValue, VARIANT_HK,
                         nsCSSProps::kBoxDirectionKTable);
   case eCSSProperty_box_flex:
     return ParseNonNegativeVariant(aValue, VARIANT_HN, nsnull);
