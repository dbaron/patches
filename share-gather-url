 PRBool
-CSSParserImpl::GatherURL(nsString& aURL)
+CSSParserImpl::ParseURLOrString(nsString& aURL)
 {
   if (!GetToken(PR_TRUE)) {
     return PR_FALSE;
   }
   if (eCSSToken_String == mToken.mType) {
     aURL = mToken.mIdent;
     return PR_TRUE;
   }
   else if (eCSSToken_Function == mToken.mType &&
            mToken.mIdent.LowerCaseEqualsLiteral("url") &&
            GetURLInParens(aURL)) {
     return PR_TRUE;
   }
+  UngetToken();
   return PR_FALSE;
 }
 
