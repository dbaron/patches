 IsWhitespace(int32_t ch) {
-  return uint32_t(ch) < 256 && (gLexTable[ch] & IS_WHITESPACE) != 0;
+  return uint32_t(ch) < 128 && (gLexTable[ch] & IS_WHITESPACE) != 0;
 }
 
 static inline bool
 IsDigit(int32_t ch) {
   return (ch >= '0') && (ch <= '9');
 }
 
