+struct SpecifiedToComputedCalcOps :
+           public mozilla::css::NumbersAlreadyNormalizedOps
+{
+  // FIXME (perf): Is there too much copying as a result of returning
+  // nsStyleCoord objects?
+  typedef nsStyleCoord result_type;
+
+  static result_type
+  MergeAdditive(nsCSSUnit aCalcFunction,
+                result_type aValue1, result_type aValue2)
+  {
+    // FIXME: WRITE ME
+    return nsStyleCoord();
+  }
+
+  static result_type
+  MergeMultiplicativeL(nsCSSUnit aCalcFunction,
+                       float aValue1, result_type aValue2)
+  {
+    // FIXME: WRITE ME
+    return nsStyleCoord();
+  }
+
+  static result_type
+  MergeMultiplicativeR(nsCSSUnit aCalcFunction,
+                       result_type aValue1, float aValue2)
+  {
+    // FIXME: WRITE ME
+    return nsStyleCoord();
+  }
+
+  struct ComputeData {
+    nsStyleContext* mStyleContext;
+    nsPresContext* mPresContext;
+    PRBool& mCanStoreInRuleTree;
+
+    ComputeData(nsStyleContext* aStyleContext, nsPresContext* aPresContext,
+                PRBool& aCanStoreInRuleTree)
+      : mStyleContext(aStyleContext),
+        mPresContext(aPresContext),
+        mCanStoreInRuleTree(aCanStoreInRuleTree)
+    {
+    }
+  };
+
+  static result_type ComputeLeafValue(const nsCSSValue& aValue,
+                                      const ComputeData& aClosure)
+  {
+    nsStyleCoord result;
+    if (aValue.GetUnit() == eCSSUnit_Percent) {
+      result.SetPercentValue(aValue.GetPercentValue());
+    } else {
+      result.SetCoordValue(CalcLength(aValue, aClosure.mStyleContext,
+                                      aClosure.mPresContext,
+                                      aClosure.mCanStoreInRuleTree));
+    }
+    return result;
+  }
+};
