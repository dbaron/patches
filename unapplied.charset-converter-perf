+#ifdef DEBUG
+PRBool nsCharsetConverterManager::IsCanonical(const char* aCharset)
+{
+  nsCAutoString charset;
+  nsCharsetConverterManager::GetCharsetAlias(aCharset, charset);
+  return !strcmp(aCharset, charset.get());
