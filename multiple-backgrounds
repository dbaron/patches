+
+PRBool CSSParserImpl::ParseBackgroundColor(nsresult& aErrorCode)
+{
+  if (!GetToken(aErrorCode, PR_TRUE)) {
+    return PR_FALSE;
+  }
+  if (eCSSToken_Symbol == mToken.mType && mToken.mSymbol == '/') {
+    // "If the color before the slash is missing, it is assumed to be
+    // 'transparent'." (css3-background, 4.1)
+    mTempData.mColor.mBackColor.mXValue.SetColorValue(NS_RGBA(0, 0, 0, 0));
+  } else {
+    UngetToken();
+    if (!ParseVariant(aErrorCode, mTempData.mColor.mBackColor.mXValue,
+                      VARIANT_HC, nsnull)) {
+      return PR_FALSE;
+    }
+  }
+  switch (mTempData.mColor.mBackColor.mXValue.GetUnit()) {
+    case eCSSUnit_Inherit:
+    case eCSSUnit_Initial:
+      mTempData.mColor.mBackColor.mYValue.Reset();
+      return PR_TRUE; // we're done
+    default:
+  }
+  if (!GetToken(aErrorCode, PR_TRUE)) {
+    return PR_TRUE;
+  }
+  if (eCSSToken_Symbol == mToken.mType && mToken.mSymbol == '/') {
+    if (!ParseVariant(aErrorCode, mTempData.mColor.mBackColor.mYValue,
+                       VARIANT_HC, nsnull)) {
+      retun PR_FALSE;
+    }
+  } else {
+    UngetToken();
+  }
+  return ExpectEndProperty(aErrorCode);
 }
 
 PRBool CSSParserImpl::ParseBackgroundPosition(nsresult& aErrorCode)
 {
   if (!ParseBackgroundPositionValues(aErrorCode) ||
       !ExpectEndProperty(aErrorCode)) 
     return PR_FALSE;
   mTempData.SetPropertyBit(eCSSProperty_background_position);
