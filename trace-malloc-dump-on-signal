     if (tracing_enabled)
         StartupHooker();
+
+#ifdef linux
+    SetupDumpAllocationsHook();
+#endif
 }
 
 /*
  * Options for log files, with the log file name either as the next option
  * or separated by '=' (e.g. "./mozilla --trace-malloc * malloc.log" or
