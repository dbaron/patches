         continue
     extendedAttrs = ["Throws", "TreatNullAs=EmptyString"]
     if pref is not "":
         extendedAttrs.append('Pref="%s"' % pref)
+    elif hasFlag(flags, "CSS_PROPERTY_DISABLED_BY_DEFAULT"):
+        continue
     if not prop.startswith("Moz"):
