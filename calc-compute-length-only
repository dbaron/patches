+        data(aFontSize, aStyleFont, aStyleContext, aPresContext,
+             aUseProvidedRootEmSize, aUseUserFontSet, aCanStoreInRuleTree);
+      return ComputeCalc<CalcLengthCalcTraits>(aValue, data);
+    }
     default:
       NS_NOTREACHED("unexpected unit");
       break;
   }
   return 0;
 }
 
