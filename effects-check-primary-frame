+<!DOCTYPE html>
+<title>Testcase for bug 1245075</title>
+<style>
+.test {
+  width: 100px; height: 100px;
+  background: blue; color: white;
+  display: table;
+  transition: opacity 3s 100s linear;
+  opacity: 0.5;
+}
+</style>
+<div class="test">Move mouse over me</div>
+<script>
+var t = document.getElementByIt("test");
+getComputedStyle(t, "").opacity; // flush style
+t.style.opacity = "1"; // start transition
+</script>
